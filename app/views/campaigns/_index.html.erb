<% if flash[:notice] %>
  <p style="background: yellow">
    <%= flash[:notice] %>
  </p>
<% end %>

<h1>Campaigns</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Review</th>
      <th>Goal</th>
      <th>Amount donated</th>
      <th>Started at</th>
      <th>Started by</th>
    </tr>
  </thead>
  <tbody>
    <%= render campaigns %>
  </tbody>
</table>