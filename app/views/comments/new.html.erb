<h1>New comment for <%= @comment.campaigm.title %></h1>
<h2>Please fill the form below: </h2>
<%= render partial: "shared/errors", locals: {obj: @comment} %>
<%= form_for(@comment) do |f| %>
  <p>
    <% unless current_user %>
      <%= f.label :author, "Author:" %>
      <%= f.text_field :author %>
    <% else %>
      <%= f.hidden_field :author, :value => current_user.name %>
    <% end %>
  </p>
  <p>
    <%= f.label :message, "Message: " %>
    <%= f.text_area :message %>
  </p>
  <p>
    <%= f.hidden_field :campaign_id, :value => params[:campaign_id] %>
  </p>
  <p>
    <%= f.submit "Save" %>
    <% if request.env['PATH_INFO'] == edit_campaign_path && !campaign.donations.any? %>
      <%= link_to "Delete", campaign, method: :delete, data: {confirm: "Are you sure you want to delete this Campain?"} %>
    <% end %>
    <%= link_to "Cancel", campaign_path(@comment.campaign) %>
  </p>
<% end %>