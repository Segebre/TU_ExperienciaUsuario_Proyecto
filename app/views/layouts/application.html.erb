<!DOCTYPE html>
<html>
  <head>
    <title>FundNHelp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class= "navbar-custom">
      <div class ="container-fluid">
        <div class="navbar-header">
          <%= link_to root_path do %>
            <p class="intro-text">Fund N' Help</p>
          <% end %>
        </div>
    <ul class="navbar-nav ">
      <li>
        <h3 style="padding-right:10px">
          <%= link_to campaigns_path do %>
            Campaigns
          <% end %>
        </h3>
      </li>
        <% unless current_user %>
          <li>
            <h3 style="padding-right:10px">
            <%= link_to new_user_path do %>
              Sign Up
            <% end %>
            </h3>
          </li>
          <li>
            <h3 style="padding-right:10px">
            <%= link_to login_path do %>
              Login
            <% end %>
            </h3>
          </li>
        <% else %>
          <li>
            <h3 style="padding-right:10px">
            <%= link_to new_campaign_path do %>
              Start a Campaign
            <% end %>
            </h3>
          </li>
          <li>
            <h3 style="padding-right:10px">
            <%= link_to user_path do %>
              Profile
            <% end %>
            </h3>
          </li>
          <li>
            <h3 style="padding-right:10px">
            <%= link_to logout_path do %>
              Log Out
            <% end %>
            </h3>
          </li>
          <% if current_user %>Signed in as <%= current_user.name %><% end %>
        <% end %>
    </ul>
  </div>

</nav>
    <%= yield %>
    <p class="footer footer-below">
        Hecho por Juan Segbre, Jose Ramon
        <p>Experiencia de Usuario 2016</p>
    </p>
  </body>
</html>
