<!DOCTYPE html>
<html>
  <head>
    <title>FundNHelp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <table>
      <tbody>
        <td><%= link_to "Home", root_path %></td>
        <td><%= link_to "Campaigns", campaigns_path %></td>
        <% unless current_user %>
          <td><%= link_to "Sign Up", new_user_path %></td>
          <td><%= link_to "Login", login_path %></td>
        <% else %>
          <td><%= link_to "Start a Campaign", new_campaign_path %></td>
          <td><%= link_to "Profile", user_path %></td>
          <td><%= link_to "Log Out", logout_path %></td>
          <% if current_user %>Signed in as <%= current_user.name %><% end %>
        <% end %>
      </tbody>
    </table>

    <%= yield %>
  </body>
</html>
